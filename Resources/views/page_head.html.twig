{% if content is defined and title is not defined %}
    {% set title = ez_content_name( content ) ~ ' - Farte' %}
{% endif %}

<meta name="generator" content="eZ Platform"/>

<link rel="Home" href="{{ path( ezpublish.rootLocation ) }}" title="{{ 'Farte'|trans }}"/>
<link rel="Index" href="{{ path( ezpublish.rootLocation ) }}" title="{{ 'Farte'|trans }}"/>
