<section class="content-view-block">

{% if zones[0].blocks %}
    {% for block in zones[0].blocks %}
        {{ render(
               controller(
                   "ez_page:viewBlock",
                   {
                       'block': block
                   }
               )
           ) }}
        {% if not loop.last %}
            <div class="block-separator"></div>
        {% endif %}
    {% endfor %}
{% endif %}

</section>
